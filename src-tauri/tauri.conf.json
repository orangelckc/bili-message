{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "bilibili弹幕机",
    "version": "../package.json"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "request": true,
        "all": true,
        "scope": [
          "https://**",
          "http://**"
        ]
      },
      "window": {
        "setAlwaysOnTop": true,
        "startDragging": true,
        "create": true,
        "show": true
      },
      "clipboard": {
        "all": false,
        "writeText": true
      },
      "fs": {
        "all": false,
        "writeFile": true,
        "scope": [
          "$DESKTOP/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.bili-message",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "macOS": {
        "exceptionDomain": "hdslb.com"
      },
      "targets": [
        "msi",
        "dmg",
        "updater"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEEwQkI0RkY5OTRBNzZFQzEKUldUQmJxZVUrVSs3b0xUY2RBZHNFbGwzQ2dONzBsQ3Y0aEFVem9mUDVBNlN5MFJUMHVNbVIrQ1gK",
      "endpoints": [
        "https://updater.finde.fun/update/{{target}}/{{arch}}/{{current_version}}"
      ]
    },
    "windows": [
      {
        "label": "main",
        "url": "/host",
        "title": "bilibili弹幕机",
        "minWidth": 400,
        "maxWidth": 640,
        "width": 640,
        "minHeight": 700,
        "maxHeight": 700,
        "height": 700,
        "alwaysOnTop": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "systemTray": {
      "iconPath": "assets/tray.png"
    }
  }
}
